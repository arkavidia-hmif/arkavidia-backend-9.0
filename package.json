		"argon2": "^0.41.1",
		"dotenv": "^16.4.5",
		"drizzle-orm": "^0.36.0",
		"drizzle-zod": "^0.5.1",
		"hono": "^4.6.12",
		"husky": "^9.1.7",
		"minio": "^8.0.2",
		"nodemailer": "^6.9.16",
		"postgres": "^3.4.5",
		"zod": "^3.23.8"
	},
	"devDependencies": {
